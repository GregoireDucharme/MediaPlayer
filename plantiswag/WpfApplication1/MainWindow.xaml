<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Media Player" Height="600" Width="800">

    <Grid Margin="0,0,0,0" RenderTransformOrigin="0,0">
        <TabControl>
            <TabItem Header="En lecture">
                <MediaElement Name="mediaElement" Width="700" Height="450" LoadedBehavior="Manual" Margin="75,0,59,0"/>
            </TabItem>
            <TabItem Header="Musiques" />
                <TabItem Header="Videos" />
            <TabItem Header="Images">
                <ListBox Name="listBox">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <EventSetter Event="MouseDoubleClick" Handler="ListBox_MouseDoubleClick"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </TabItem>
            <TabItem Header="Playlists" />
        </TabControl>
    </Grid>
</Window>
